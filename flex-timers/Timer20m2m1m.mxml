<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	layout="absolute" xmlns:utils="utils.*" creationComplete="init()">
	<mx:Script>
	 	<![CDATA[
		public static const millisecondsPerSecond:int = 1000;
		public static const millisecondsPerMinute:int = 1000 * 60;
		public static const millisecondsPerHour:int = 1000 * 60 * 60;
		public static const millisecondsPerDay:int = 1000 * 60 * 60 * 24;
	
		private function init():void
		{	
			// Set the mode to COUNTDOWN and the delay to 15 sec
			watch.setMode("COUNTDOWN");
			watch.setEndDelay(20 * 60 * millisecondsPerSecond);
			watch.setWarning(2 * 60 * millisecondsPerSecond);
			watch.setTimerRes(1 * 60 * millisecondsPerSecond);
			
		}
	 	]]>
	</mx:Script>
	<utils:Watch height="100%" color="#000000"
		width="100%" fontSize="100" scaleX="4" scaleY="4" id="watch" fontWeight="bold"
		fontFamily="Arial Bold" textAlign="center" paddingTop="30" paddingBottom="0" />
</mx:Application>